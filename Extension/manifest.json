{
  "manifest_version": 3,
  "name": "اتقي الله - حماية وتذكير",
  "version": "1.0",
  "description": "إضافة لتذكير المستخدم بالله عند البحث عن المحتوى غير اللائق",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "اتقي الله - حماية وتذكير"
  }
} 